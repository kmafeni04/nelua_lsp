require 'os'
require 'io'

require '.logger'

local function create_tmp_file(current_file_path: string, current_file: string): string
	local tmp_name = os.tmpname()
	local tmp_file = io.open(tmp_name, "w")
	tmp_file:write(current_file)
	tmp_file:close()

  return tmp_name
end

return create_tmp_file
